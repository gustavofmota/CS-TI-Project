@using TI_Project.Helpers


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - PennySaver</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.5.4/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        html, body {
            height: 100%;
        }

        body {
            background: hsla(274, 100%, 48%, 1);
            background: linear-gradient(90deg, hsla(274, 100%, 48%, 1) 0%, hsla(274, 100%, 22%, 1) 100%);
            background: -moz-linear-gradient(90deg, hsla(274, 100%, 48%, 1) 0%, hsla(274, 100%, 22%, 1) 100%);
            background: -webkit-linear-gradient(90deg, hsla(274, 100%, 48%, 1) 0%, hsla(274, 100%, 22%, 1) 100%);
            filter: progid: DXImageTransform.Microsoft.gradient(startColorstr="#8B00F5", endColorstr="#400070", GradientType=1);
            color: white;
            display: flex;
            flex-direction: column;
        }

        .navbar-dark .navbar-brand {
            color: #ffffff;
        }

        .navbar-dark .navbar-nav .nav-link {
            color: #ffffff;
        }

            .navbar-dark .navbar-nav .nav-link.active {
                font-weight: bold; /* Make the active link bold */
            }

        .content-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
        }

        .content {
            background-color: rgba(255, 255, 255, 0.1); /* Slightly transparent background */
            padding: 30px;
            border-radius: 10px;
            width: 100%;
            max-width: 1200px;
        }

            .content a, .content .btn {
                color: #ccccff; /* Light lavender color for the links */
                text-decoration: none; /* Remove underline */
                font-weight: bold; /* Make the text bold */
                padding: 5px 10px; /* Add padding for a button-like feel */
                border-radius: 5px; /* Rounded corners */
                transition: background-color 0.3s, color 0.3s; /* Smooth transition for hover effect */
            }

                .content a:hover, .content .btn:hover {
                    background-color: #4B0082; /* Indigo background on hover */
                    color: white; /* White text on hover */
                    text-decoration: none; /* Keep underline removed */
                }

        table.table tr > td:last-child {
            text-align: end;
            white-space: nowrap;
        }

        table.table {
            color: white;
            table-layout: fixed;
            width: 100%;
        }

            table.table th, table.table td {
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }

                table.table td.description-column {
                    max-width: 300px; /* Adjust the width as necessary */
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                }

        .footer {
            height: 60px; /* Adjust footer height */
            background-color: none;
            text-align: center;
            padding: 20px 0;
            color: white !important;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        #globalSuccessMessage {
            display: none;
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1050;
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">PennySaver</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.NavLink("Category", "Index", "Category")
                    </li>
                    <li class="nav-item">
                        @Html.NavLink("Expense", "Index", "Expense")
                    </li>
                    <li class="nav-item">
                        @Html.NavLink("Payment Methods", "Index", "PaymentMethod")
                    </li>
                </ul>

                @using Microsoft.AspNet.Identity
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
                            </li>
                            <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                        </ul>
                    }
                }

            </div>
        </div>
    </nav>
    <div id="globalSuccessMessage" class="alert alert-success" role="alert">
        Success message goes here!
    </div>
    <div class="content-wrapper">
        <div class="content">
            @RenderBody()
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <span>&copy; @DateTime.Now.Year PennySaver. All Rights Reserved.</span>
        </div>
    </footer>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
    <script>
        $(document).ready(function () {
            // Show the success message if it exists in the ViewBag
            @if (ViewBag.msg != null)
            {
                <text>
                    $('#globalSuccessMessage').text('@ViewBag.msg').fadeIn();
                    setTimeout(function () {
                        $('#globalSuccessMessage').fadeOut();
                    }, 3000); // Hide after 3 seconds
                </text>
            }
        });
    </script>
</body>
</html>
